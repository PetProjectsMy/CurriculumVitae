{% macro education_place(
  date="",
  organization="",
  specialization=""
  ) %}
  <li class="education-place">
    <span><em>{{ date }}:</em> {{ organization }}</span>
    <br>
    <span>Профиль: {{ specialization }}</span>
  </li>
{% endmacro %}

{% block education_info %}
  <section class="education-section">
    <h3>Образование</h3>
    <section class="main-education-section">
      <h4>Основное</h4>
      <ul class="main-education-list">
        {{ education_place(date="2022, бакалавр",
                organization="Московский Физико-Технический Институт",
                specialization="компьютерное моделирование") }}
      </ul>
    </section>
    <section class="additional-education-section">
      <ul class="additional-education-list">
        <h4>Дополнительное</h4>
        {{ education_place(date="2023",
                organization="Яндекс Практикум",
                specialization="Frontend Developer") }}
      </ul>
    </section>
  </section>
{% endblock education_info %}
