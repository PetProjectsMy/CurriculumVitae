{% import "macros/text-helpers.njk" as text_helpers %}

{% macro work_place(
  organization="",
  post="",
  date="",
  description=[]
  ) %}
  <li class="work-place">
    <h4><em>{{ date }}</em></h4>
    <span class="work-place__post">
      Место работы: {{ organization }}, {{ post }}
    </span>
    <br>
    <span class="work-place__description">
      {{ text_helpers.multiline(lines=description) }}
    </span>
    <br>
  </li>
{% endmacro %}

<section class="experience-section">
  <h3 class="experience-section__header">Опыт работы</h3>
  <div class="experience-section__main">
    <ul class="work-places-list">
      {{ work_place(
        date="01/2022-09/2022",
        post="QA/тестировщик",
        organization="МониторСофт",
        description=[
          "В мои обязанности входило написание E2E тестов для веб-сервиса с применением selenium и pytest."
        ]) 
      }}
    </ul>
  </div>

</section>
