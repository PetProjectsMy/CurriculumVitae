{% import "macros/macros.njk" as macros %}

{% macro pet_project(
  title="",
  description=[],
  technologies="",
  github="") %}
  <li class="learning-project">
    <h4 class="learning-project__title">
      <strong>{{ title }}</strong>
    </h4>
    <span class="learning-project__functionality-description">
      <em>Описание:</em>
      {{ macros.multiline(lines=description) }}
    </span>
    <br>
    <span class="learning-project__technologies-description">
      <em>Технологии:</em>
      {{ macros.multiline(lines=technologies, liens_sep=", ") }}
    </span>
    <br>
    <span class="learning-project__github-link">
      <em>GitHub:</em><a href={{ github }}> {{ github }}</a>
    </span>
  </li>
{% endmacro %}

<section class="learning-experience-section">
  <h3 class="learning-experience-section__title">Учебный опыт</h3>
  <ul class="learning-projects-list">
    {{ pet_project(title="Мессенджер",
        description=["Веб-мессенджер в виде single page application.",
        "\n", "\t", "Реализованы чаты в реальном времени, регистрация, профиль польователя.",
        "\n", "\t", "Интерфейс написан с помощью собственного компонента на основе JS Proxy.",
        "\n", "\t", "Из библиотек используется только html-шаблонизатор."],
        technologies=["Webpack, Typescript, WebSocket, Handlebars, Less, Handlebars"],
        github="https://github.com/PetProjectsMy/Messenger") 
    }}
    {{ pet_project(title='Игра "Among Us"',
        description=["Проект командной разработки в рамках курса.",
        "\n", "\t",
        "Особенности: мультиплеер, таблица рейтингов, oauth, регистрация и профиль позователей, собственный backend",
        "\n", "\t",
        "С моей стороны: реализованы часть интерфейсов и API, service worker на typescript, nginx и ssl для хостинга"
        ],
        technologies=[
        "\n", "\t", "Lerna, Vite, SSR, React, Redux, RTK Query,",
        "\n", "\t", "Canvas, Postcss, Service Worker,",
        "\n", "\t", "Express, socket.io, Docker, Sequelize, Postgres, Nginx"
        ],
        github="https://github.com/Reactivnye-Enoty-Na-Lyzhan/among-us") 
    }}
  </ul>
</section>
